@{
    ViewData["Title"] = "2019-2020 NFL Leaders";
}
@if (User.Identity.IsAuthenticated)
{
    <h1>@ViewData["Title"]</h1>

    <h4>Football teams</h4>
    <table border="1" style="width:100%;">
        <thead>
            <tr>
                <th>
                    Sr.
                </th>
                <th>
                    Team Name
                </th>
                <th>
                    Display Name
                </th>
                <th>Abbreviation</th>
                <th>Short Display Name</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@(i+1)</td>
                    <td>@Model[i].TeamName</td>
                    <td>@Model[i].TeamDisplayName</td>
                    <td>@Model[i].TeamAbbreviation</td>
                    <td>@Model[i].TeamShortDisplayName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>Please log in to see these statistics.</h1>
}